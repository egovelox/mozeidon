{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "mozeidon",
  "title": "Mozeidon",
  "description": "Search and open tabs in Mozilla Firefox with mozeidon",
  "icon": "firefox-logo.png",
  "author": "egovelox",
  "contributors": [],
  "categories": [
    "Applications",
    "Developer Tools",
    "Productivity"
  ],
  "license": "MIT",
  "preferences": [
    {
      "name": "mozicli",
      "type": "textfield",
      "required": true,
      "title": "Mozeidon command file-path",
      "description": "The command file-path of mozeidon",
      "placeholder": "e.g /opt/homebrew/bin/mozeidon"
    }
  ],
  "commands": [
    {
      "name": "new-tab",
      "title": "New Tab",
      "subtitle": "Mozilla Firefox",
      "description": "Open a new Mozilla Firefox tab.",
      "mode": "view",
      "preferences": [
        {
          "name": "searchEngine",
          "type": "dropdown",
          "required": false,
          "title": "Search Engine",
          "description": "Search Engine for query (default: Google).",
          "default": "Google",
          "data": [
            {
              "title": "Google",
              "value": "Google"
            },
            {
              "title": "DuckDuckGo",
              "value": "DuckDuckGo"
            },
            {
              "title": "Bing",
              "value": "Bing"
            },
            {
              "title": "Baidu",
              "value": "Baidu"
            },
            {
              "title": "Brave",
              "value": "Brave"
            }
          ]
        }
      ]
    },
    {
      "name": "search-history",
      "title": "Search History",
      "subtitle": "Mozilla Firefox",
      "description": "Search browser history.",
      "mode": "view"
    },
    {
      "name": "search-bookmarks",
      "title": "Search Bookmarks",
      "subtitle": "Mozilla Firefox",
      "description": "Search browser bookmarks.",
      "mode": "view"
    },
    {
      "name": "search-open-tabs",
      "title": "Search Open Tabs",
      "subtitle": "Mozilla Firefox",
      "description": "Search open tabs.",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.59.0",
    "@raycast/utils": "^1.4.13",
    "run-applescript": "6.0.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "1.0.6",
    "@types/node": "18.8.3",
    "@types/react": "18.0.9",
    "@types/sql.js": "1.4.4",
    "eslint": "^7.32.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}
