{
  "description": "Native messaging add-on to interact with mozilla",
  "manifest_version": 2,
  "name": "mozeidon",
  "version": "1.0",
  "icons": {
    "48": "icons/message.svg"
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "mozeidon@egovelox.com",
      "strict_min_version": "50.0"
    }
  },

  "background": {
    "scripts": ["background.js"]
  },

  "browser_action": {
    "default_icon": "icons/message.svg"
  },
  
  "permissions": ["nativeMessaging", "tabs", "sessions", "bookmarks"]

}
